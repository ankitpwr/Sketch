{
  "name": "Sketch",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:generate": "cd packages/db && npx prisma generate && cd ../..",
    "start:backend": "cd apps/http-server && pnpm run start",
    "start:websocket": "cd apps/ws-server && pnpm run start",
    "start:frontend": "cd apps/frontend && pnpm run start"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.4",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@types/cuid": "^1.3.1",
    "tsup": "^8.5.0"
  }
}
